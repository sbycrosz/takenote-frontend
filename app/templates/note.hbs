<div class="panel panel-default" >
  <div class="panel-heading clearfix" >
    <small class="pull-left">Last edit was {{render-time updated_at}}</small>
    <div class="btn-group btn-group-sm pull-right">
      {{#if confirmDeletion}}
        <span class="btn btn-warning">Delete this note ?</span>
        <a class="btn btn-danger" {{action 'deleteNote'}}><i class="fa fa-trash-o"></i> Yes</a>
        <a class="btn btn-success" {{action 'cancelDelete'}}><i class="fa fa-times"></i> No</a>
      {{else}}
        {{#if isDirty}}
          {{#if isSaving}}
            <a class="btn btn-success"><i class="fa fa-cog fa-spin"></i> Saving</a>
          {{else}}
            <a class="btn btn-success" {{action 'saveNote'}}><i class="fa fa-check"></i> Save</a>
          {{/if}}
        {{else}}
          <a class="btn btn-success"><i class="fa fa-check"></i> Saved</a>
        {{/if}}
        <a class="btn btn-danger" {{action 'confirmDelete'}}><i class="fa fa-trash-o"></i> Delete</a>
      {{/if}}
    </div>
  </div>


  <div>
    {{input type="text" value=title class="h4 note-title" placeholder="Insert title..."}}
    {{view 'tinymce-editor' value=body class="form-control" id="editor"}}
  </div>
</div>
